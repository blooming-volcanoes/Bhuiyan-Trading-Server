generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  name     String?
  password String
}

model Category {
  id              Int      @id @default(autoincrement())
  categoryName    String   @unique
  subCategoryName String
  product         Product? @relation(fields: [productId], references: [id])
  productId       Int?
}

model Product {
  id          Int        @id @default(autoincrement())
  title       String
  price       String
  currency    String
  unit        String
  shortDesc   String
  ProductDesc String
  FeatureImg  String?
  categoryId  Category[]
}

